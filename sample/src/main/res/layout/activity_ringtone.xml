<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonPlayDefaultNotificationSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Default Notification Sound" />

    <Button
        android:id="@+id/buttonPlayPickedNotificationSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Picked Notification Sound" />

    <Button
        android:id="@+id/buttonPlayValidNotificationSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Valid Notification Sound" />

    <TextView
        android:id="@+id/textRingtoneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>