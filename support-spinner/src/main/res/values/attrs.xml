<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XpListPopupWindow">
        <attr name="android:layout_marginLeft"/>
        <attr name="android:layout_marginRight"/>
        <attr name="android:layout_marginStart"/>
        <attr name="android:layout_marginEnd"/>
        <attr name="android:layout_marginTop"/>
        <attr name="android:layout_marginBottom"/>
        <attr name="android:layout_margin"/>
        <attr name="asp_maxItemCount" format="integer"/>
        <attr name="asp_widthUnit" format="dimension"/>
        <attr name="asp_width" format="enum|dimension">
            <!-- @deprecated Use match_constraint. -->
            <enum name="match_parent" value="-1"/>

            <enum name="match_constraint" value="-1"/>
            <enum name="wrap_content" value="-2"/>
            <enum name="wrap_content_unit" value="-3"/>
        </attr>
        <attr name="asp_maxWidth" format="enum|dimension">
            <enum name="fit_screen" value="-1"/>
            <enum name="fit_anchor" value="-2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="XpAppCompatSpinner">
        <attr name="asp_spinnerMode" format="enum">
            <enum name="adaptive" value="0"/>
            <enum name="dialog" value="1"/>
            <enum name="dropdown" value="2"/>
        </attr>
        <attr name="asp_simpleMenuWidthUnit" format="enum|dimension">
            <!-- @deprecated Use asp_simpleMenuWidthMode. -->
            <enum name="match_parent" value="-1"/>
            <!-- @deprecated Use asp_simpleMenuWidthMode. -->
            <enum name="wrap_content" value="-2"/>
        </attr>
        <attr name="asp_simpleMenuWidthMode" format="enum">
            <!-- @deprecated Use match_constraint. -->
            <enum name="match_parent" value="-1"/>

            <enum name="match_constraint" value="-1"/>
            <enum name="wrap_content" value="-2"/>
            <enum name="wrap_content_unit" value="-3"/>
        </attr>
        <attr name="asp_simpleMenuMaxWidth" format="enum|dimension">
            <enum name="fit_screen" value="-1"/>
            <enum name="fit_anchor" value="-2"/>
        </attr>
        <attr name="asp_simpleMenuMaxItemCount" format="integer"/>
    </declare-styleable>

    <!-- @hide For internal use only. Use only as directed. -->
    <declare-styleable name="EpicenterClipReveal">
        <attr name="interpolatorX" format="reference" />
        <attr name="interpolatorY" format="reference" />
        <attr name="interpolatorZ" format="reference" />
    </declare-styleable>

</resources>
