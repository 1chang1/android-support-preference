<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- @deprecated -->
    <style name="PreferenceThemeOverlay.Material" parent="PreferenceThemeOverlay.Asp.Material"/>

    <style name="PreferenceThemeOverlay.Asp"/>

    <style name="PreferenceThemeOverlay.Asp.Material">
        <item name="preferenceFragmentStyle">@style/PreferenceFragment.Asp</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList.Asp.Material</item>

        <!-- Groups -->
        <item name="preferenceCategoryStyle">@style/Preference.Asp.Material.Category</item>
        <item name="preferenceInformationStyle">@style/Preference.Asp.Material.Information</item>
        <item name="preferenceScreenStyle">@style/Preference.Asp.Material.PreferenceScreen</item>

        <!-- Standard Preferences -->
        <item name="preferenceStyle">@style/Preference.Asp.Material</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.Asp.Material.CheckBoxPreference</item>
        <item name="dialogPreferenceStyle">@style/Preference.Asp.Material.DialogPreference</item>
        <item name="editTextPreferenceStyle">
            @style/Preference.Asp.Material.DialogPreference.EditTextPreference
        </item>
        <item name="switchPreferenceCompatStyle">@style/Preference.Asp.Material.SwitchPreferenceCompat
        </item>

        <!-- Custom Preferences -->
        <item name="ringtonePreferenceStyle">
            @style/Preference.Asp.Material.DialogPreference.RingtonePreference
        </item>
        <item name="seekBarPreferenceStyle">@style/Preference.Asp.Material.SeekBarPreference</item>
        <item name="seekBarDialogPreferenceStyle">
            @style/Preference.Asp.Material.DialogPreference.SeekBarDialogPreference
        </item>

        <item name="listPreferenceStyle">
            @style/Preference.Asp.Material.DialogPreference.ListPreference
        </item>
        <item name="multiSelectListPreferenceStyle">
            @style/Preference.Asp.Material.DialogPreference.MultiSelectListPreference
        </item>

        <!-- This will possibly be introduced by appcompat-v7 in the future. -->
        <item name="asp_textAppearanceListItemSecondary">@style/TextAppearance.AppCompat.Body1
        </item>
        <item name="asp_textAppearanceListItemTertiary">@style/TextAppearance.AppCompat.Caption
        </item>

        <item name="android:spinnerItemStyle">@style/Widget.Asp.TextView.SpinnerItem</item>
        <item name="spinnerDropDownItemStyle">@style/Widget.Asp.DropDownItem.Spinner</item>
        <item name="dropDownListViewStyle">@style/Widget.Asp.ListView.DropDown</item>
        <item name="listPopupWindowStyle">@style/Widget.Asp.ListPopupWindow</item>
    </style>
</resources>
